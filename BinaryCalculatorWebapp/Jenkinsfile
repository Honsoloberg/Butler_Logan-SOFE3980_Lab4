pipeline {
  agent any
  tools {
    maven 'maven' 
  }
  stages {
    stage ('Init') {
      steps {
        sh 'echo "Start of Job"'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
    stage ('Build and Push Docker') {
      steps {
        sh 'docker build -t northamerica-northeast2-docker.pkg.dev/lab-deliverable-4-cicd/sofe3980u-lab4/binarycalculator .'
        sh 'docker push northamerica-northeast2-docker.pkg.dev/lab-deliverable-4-cicd/sofe3980u-lab4/binarycalculator'
      }
    }
    stage ('Deploy Docker'){
      steps {
        sh 'kubectl create deployment binarycalculator-deployment --image northamerica-northeast2-docker.pkg.dev/lab-deliverable-4-cicd/sofe3980u-lab4/binarycalculator --port=8000'
        sh 'kubectl expose deployment binarycalculator-deployment --type=LoadBalancer --name=binarycalculator-service'
      }
    }
  }
}
